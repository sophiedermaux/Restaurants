<h1> Restaurants </h1>

<form action="/restaurants" method="get">
  <input type="text" name="food_type" placeholder="What sort of food do you fancy?">
  <input type="submit">
</form>
<ul>
  <% @restaurants.each do |id, restaurant| %>
    <li><%= restaurant[:name] %> (<%= restaurant[:address] %>)</li>
  <% end %>
</ul>
